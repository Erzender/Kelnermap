<div
  style="margin-left: auto; margin-right: auto; width: 1000px; max-width: 100%;"
>
  <h1 style="color: darkred;">🍪<%= fields.title %></h1>
  <form id="fplayer" action="/lekelner/explorer/joueurs/editeur" method="post">
    <input readonly name="title" style="display: none" value="<%= fields.title %>" />
    <p>Pseudo Minecraft <input name="name" value="<%= fields.name %>" /></p>
    <p>
        <div>Description</div>
        <textarea rows="10" cols="50" height="400px" name="description" form="fplayer" ><%= fields.description %></textarea>
    </p>
    <p>Image <input name="picture" value="<%= fields.picture %>" /></p>
    <input type="submit" value="Générer la commande Discord" />
  </form>
  <% if (fields.command.length > 0) { %>
    <div>Commande à copier dans Discord :</div>
    <textarea cols="50" readonly onClick="this.select();" ><%= fields.command %></textarea>
  <% } %>
</div>
