<div
  style="margin-left: auto; margin-right: auto; width: 1000px; max-width: 100%;"
>
  <div style="display: flex; flex-direction: row; align-items: center;">
    <% if (info.pic) { %>
    <span
      class="bigProfile"
      style="background-image: url('<%= info.pic %>');"
    ></span>
    <% } %>
    <a style="flex: 1; text-align: center;" href="./<%= info.id %>"
      ><h1><%= info.name %></h1></a
    >
  </div>
  <hr style="background-color: <%= info.color %>; height: 20px;" />
  <a
    class="ax"
    style="width: 150px; background-color: darkred;"
    href="<%= info.edit %>"
  >
    Administrer ✍
  </a>
  <div style="border-left: 3px solid gray; padding-left: 5px;">
    <% info.desc.forEach(function(desc){ %>
    <p><%= desc %></p>
    <% }); %>
  </div>
  <h3>Superficie</h3>
  <%= info.size %> km²<br />
  <% if (info.anthem && info.anthem.length) { %>
  <h3>Hymne national</h3>
  <iframe
    style="
      background: url('/lekelner/asset/gifnyl.gif') no-repeat;
      background-size: contain;
      max-width: 100%;
    "
    width="500"
    height="70"
    src="<%= info.anthem %>"
    frameborder="0"
    allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
    allowfullscreen
  ></iframe>
  <% } %>
  <h3>Dirigeantes</h3>
  <div style="display: flex; flex-direction: row;">
    <% info.citizens.forEach(function(player){ %>
    <a
      href="/lekelner/explorer/joueurs/<%= player.id %>"
      class="bigProfile"
      style="background-image: url('<%= player.pic %>');"
    ></a>
    <% }); %>
  </div>
  <h3>Habitantes</h3>
  <div style="display: flex; flex-direction: row;">
    <% info.inhabs.forEach(function(player){ %>
    <a
      href="/lekelner/explorer/joueurs/<%= player.id %>"
      class="miniProfile"
      style="background-image: url('<%= player.pic %>');"
    ></a>
    <% }); %>
  </div>

  <% if (info.friends.length > 0) { %>
  <h3>🍺 Amicale envers :</h3>
  <div style="display: flex; flex-direction: row;">
    <% info.friends.forEach(function(nation){ %>
    <a
      href="/lekelner/explorer/nations/<%= nation.nation %>"
      class="miniProfile"
      title="<%= nation.name %>"
      style="background-image: url('<%= nation.pic %>');"
    ></a>
    <% }); %>
  </div>
  <% } %> <% if (info.mistrust.length > 0) { %>
  <h3>👺 Méfiante envers :</h3>
  <div style="display: flex; flex-direction: row;">
    <% info.mistrust.forEach(function(nation){ %>
    <a
      href="/lekelner/explorer/nations/<%= nation.nation %>"
      class="miniProfile"
      title="<%= nation.name %>"
      style="background-image: url('<%= nation.pic %>');"
    ></a>
    <% }); %>
  </div>
  <% } %>
</div>
