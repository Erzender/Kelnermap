<div
  style="margin-left: auto; margin-right: auto; width: 1000px; max-width: 100%;"
>
  <div style="display: flex; flex-direction: row; align-items: center;">
    <% if (info.pic) { %>
    <span
      class="bigProfile"
      style="background-image: url('<%= info.pic %>');"
    ></span>
    <% } %>
    <a style="flex: 1; text-align: center;" href="./<%= info.id %>"
      ><h1><%= info.name %></h1></a
    >
  </div>
  <hr style="background-color: <%= info.color %>; height: 20px;" />
  <h3>Superficie</h3>
  <%= info.size %> km²<br />
  <% if (info.anthem && info.anthem.length) { %>
  <h3>Hymne national</h3>
  <iframe
    style="
      background: url('/lekelner/asset/gifnyl.gif') no-repeat;
      background-size: contain;
    "
    width="500"
    height="70"
    src="<%= info.anthem %>"
    frameborder="0"
    allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture"
    allowfullscreen
  ></iframe>
  <% } %>
  <h3>Dirigeants</h3>
  <div style="display: flex; flex-direction: row;">
    <% info.citizens.forEach(function(player){ %>
    <a
      href="/lekelner/explorer/joueurs/<%= player.id %>"
      class="bigProfile"
      style="background-image: url('<%= player.pic %>');"
    ></a>
    <% }); %>
  </div>
  <h3>Habitants</h3>
  <div style="display: flex; flex-direction: row;">
    <% info.inhabs.forEach(function(player){ %>
    <a
      href="/lekelner/explorer/joueurs/<%= player.id %>"
      class="miniProfile"
      style="background-image: url('<%= player.pic %>');"
    ></a>
    <% }); %>
  </div>
  <hr />
  <div style="border-left: 3px solid gray; padding-left: 5px;">
    <% info.desc.forEach(function(desc){ %>
    <p><%= desc %></p>
    <% }); %>
  </div>
  <a
    style="
      display: flex;
      font-weight: bold;
      width: 100px;
      justify-content: center;
      background-color: black;
      margin-bottom: 10px;
      margin-top: 10px;
      padding: 5px;
      text-decoration: none;
    "
    href="<%= info.edit %>"
  >
    Modifier ✍
  </a>

  <div style="margin-top: 50px; font-weight: bold;">
    Pour rejoindre la nation :
  </div>
  <textarea cols="25" rows="1" readonly onClick="this.select();">
<%= info.command %></textarea
  >
</div>
