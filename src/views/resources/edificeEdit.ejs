<div
  style="margin-left: auto; margin-right: auto; width: 800px; max-width: 100%;"
>
  <h1 style="color: cadetblue;">üè†<%= fields.title %></h1>
  <form id="fedifice" action="/lekelner/explorer/edifices/editeur" method="post">
    <input name="id" style="display: none" value="<%= fields.id %>" />
    <input name="title" style="display: none" value="<%= fields.title %>" />
    <p>Nom <input name="name" value="<%= fields.name %>" /></p>
    <p>
        <div>Description</div>
        <textarea rows="10" cols="50" height="400px" name="description" form="fedifice" ><%= fields.description %></textarea>
    </p>
    <p>Image <input name="picture" value="<%= fields.picture %>" /></p>
    <p>
        R√©gion ou ville <select name="region" form="fedifice" >
            <% regions.forEach(function(region){ %>
                <option <%= region.key === fields.region ? 'selected' : '' %> value="<%= region.key %>"><%= region.value %></option>
            <% }); %>
        </select>
    </p>
    <p>
        Lien du post mastodon <input name="mastodon" value="<%= fields.mastodon %>" />
    </p>
    <% if (fields.id > 0) { %>
      <p style="color: red;"><input name="delete" type="checkbox" /> Supprimer l'√©difice ?</p>
    <% } %>
    <input type="submit" value="G√©n√©rer la commande Discord" />
  </form>
  <% if (fields.command.length > 0) { %>
    <div>Commande √† copier dans Discord :</div>
    <textarea cols="50" readonly onClick="this.select();" ><%= fields.command %></textarea>
  <% } %>
</div>
