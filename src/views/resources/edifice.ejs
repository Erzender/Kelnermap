<div
  style="margin-left: auto; margin-right: auto; width: 1000px; max-width: 100%;"
>
  <a style="text-decoration: none;" target="_blank" href="<%- "./" + edifice.id -%>"><h1 style="color: cadetblue;">🏠<%= edifice.name %></h1></a>
  <% if (edifice.pic.length > 0) { %><img
    src="<%- edifice.pic -%>"
    style="width: 100%;"
  /><% } %>
  <a
    href="/lekelner/explorer/joueurs/<%= edifice.Creator.dataValues.discord %> "
    style="display: flex; flex-direction: row; font-size: 14; align-items: center;"
  >
    <img class="miniProfile" src="<%- edifice.playerPicture -%>" />
    <b><%= edifice.Creator.dataValues.minecraft %></b>
  </a>
  <div>📜Région ou Ville : <a style="font-weight: bold;" href="<%- "/lekelner/explorer/regions/" + edifice.region.key -%>"><%=edifice.region.n %></a></div>
  <div style="border-left: 3px solid gray; padding-left: 5px">
    <% edifice.desc.forEach(function(desc){ %>
    <p><%= desc %></p>
    <% }); %>
  </div>
  <a class="ax" style="width: 100px; background-color: cadetblue;" href="<%- edifice.edit -%>">
    Modifier ✍
  </a>

  <% if (edifice.arts.length > 0) { %>
  <h2 style="color: purple;"><%= "✒️Oeuvres exposées : " + edifice.arts.length %></h2>
  <div style="border-left: purple 3px solid; padding-left: 5px;">
    <% edifice.arts.forEach(function(art){ %>
      <div style="font-weight: bold; display: flex; flex-direction: row; align-items: center;">
          <a href="<%- art.link -%>"><%= art.name %></a>
          <img class="miniProfile" src="<%- art.artistPic -%>" />
      </div>
    <% }); %>
  </div>
  <% } %>
  <%- include ('mastodon') %>
</div>
