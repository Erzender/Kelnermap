<div
  style="margin-left: auto; margin-right: auto; width: 1000px; max-width: 100%;"
>
<a style="text-decoration: none;" target="_blank" href="<%- "./" + info.region.key -%>"><h1 style="color: orange;">📜<%= info.region.n %></h1></a>
<% if (info.domination.id) { %>
<a href="/lekelner/explorer/nations/<%= info.domination.id %>" style="display: flex; flex-direction: row; align-items: center;">
    <div
      style="width: 20px; height: 20px; border: 3px solid white; margin-right: 10px; background-color: <%- info.domination.color -%>;"
    ></div>
    Domination : <b style="margin-left: 10px;"><%= info.domination.name %></b><img class="miniProfile" src="<%=info.domination.pic %>" />
</a><br/>
<% } %>
<% if (info.city !== null) { %>
  <a href="/lekelner/explorer/joueurs/<%= info.city.governorId %>" style="display: flex; flex-direction: row; align-items: center;">
    Gouverneure : <b style="margin-left: 10px;"><%= info.city.governor %></b><img class="miniProfile" src="<%=info.city.pic %>" />
  </a><br/>
  Gueuler avec conviction pour s'y téléporter : <b style="cursor: help" title="Mais ça fonctionne uniquement pour les dirigeantes des nations amies de la nation où habite la gouverneure.">ZAAPER <%= info.city.tag %></b>
<% } %>
<% if (info.suze !== null) { %>
    <h2 style="color: orange;">📜Région : <a href="<%- info.suze.link -%>"><%= info.suze.name %></a></h2>
  <% } %>
  <% if (info.cities.length) { %>
  <h2 style="color: orange;"><%= "📜Villes : " + info.cities.length %></h2>
  <div style="border-left: orange 3px solid; padding-left: 5px;">
    <% info.cities.forEach(function(city){ %>
      <div style="font-weight: bold; display: flex; flex-direction: row; align-items: center;">
          <a href="<%- city.link -%>"><%= city.name %></a> <% if (city.edifices) { %> <div style="background-color: cadetblue;" class="pastille">🏠<%= city.edifices %></div> <% } %>
      </div>
    <% }); %>
  </div>
  <% } %>
  <h2 style="color: cadetblue;"><%= "🏠Edifices : " + info.edifices.length %></h2>
  <a class="ax" style="width: 250px; background-color: cadetblue;" href="/lekelner/explorer/edifices/editeur?region=<%= info.region.key %>">
    ＋Enregistrer un édifice
  </a>
  <div style="border-left: cadetblue 3px solid; padding-left: 5px;">
    <% info.edifices.forEach(function(edifice){ %>
      <div style="font-weight: bold; display: flex; flex-direction: row; align-items: center;">
          <a href="<%- edifice.link -%>"><%= edifice.name %></a>
          <img class="miniProfile" src="<%- edifice.player -%>" />
      </div>
    <% }); %>
  </div>
</div>
