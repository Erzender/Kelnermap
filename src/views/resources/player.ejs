<div
  style="margin-left: auto; margin-right: auto; width: 1000px; max-width: 100%;"
>
  <a
    href="<%= info.link %> "
    style="
      display: flex;
      flex-direction: row;
      align-items: center;
    "
  >
    <span
      class="bigProfile"
      style="background-image: url('<%= info.picture %>');"
    ></span>
    <h1 style="flex: 1; text-align: center;">
      <%= info.name %>
    </h1>
  </a>
  <div style="border-left: 3px solid gray; padding-left: 5px;">
    <% info.desc.forEach(function(desc){ %>
    <p><%= desc %></p>
    <% }); %>
  </div>
  <a
    class="ax"
    style="width: 100px; background-color: darkred;"
    href="<%- info.edit -%>"
  >
    Modifier ✍
  </a>
  <hr style="margin-top: 50px;" />
  <h2>Nation🏳️</h2>
  <% if (info.nationName && info.nationName.length) { %>
  <a
    href="/lekelner/explorer/nations/<%= info.nationId %>"
    style="
      display: flex;
      margin-bottom: 10px;
      flex-direction: row;
      align-items: center;
      border-left: <%= info.nationColor %> solid 20px;
      padding-left: 10px;
    "
  >
    <b><%= info.nationName %> </b>
    <img class="miniProfile" src="<%= info.nationPic %> " />
  </a>
  <% } %>

  <div>
    Citoyen de : <% info.citizenship.forEach(function(nat){ %> <%= nat %> | <%
    }); %>
  </div>
  <h2>PVP⚔️</h2>
  <div><b><%= info.pvpScore %></b> points de réputation</div>
  <div>
    <b style="font-size: 20px;">#<%= info.pvpRanking %></b> au classement
  </div>
  <hr style="margin-top: 50px;" />
  <h2 style="color: cadetblue;">🏠Edifices : <%= info.edificesNum %></h2>
  <a
    class="ax"
    style="
      width: 250px;
      background-color: cadetblue;
    "
    href="/lekelner/explorer/edifices/editeur"
  >
    ＋Enregistrer un édifice
  </a>
  <div style="border-left: cadetblue 3px solid; padding-left: 5px;">
    <% info.edifices.forEach(function(list){ %>
    <h3><%= list.region.n %></h3>
    <% list.edifices.forEach(function(edifice){ %>
    <div>· <a href="<%- edifice.link -%>"><%= edifice.name %></a></div>
    <% }); %> <% }); %>
  </div>
</div>
